#function

#arguments,body, environment part of function

fn<-function(){
   print("Hello world")
}

fn()

fn1<- function(n){
  print(n)
}

fn1(5)

fn2<-function(x,y){
  ad<- x+y
  print(paste("Add: ",ad))
}
fn2(5,4)

#ratio()

ratio<-function(x,y=20){
  x/y
}
ratio(100)

#scope of variable global

x<-10

fn3<- function(){
  y<-1
  x+y
}
fn3()

#function with return value

fn4<-function(x){ #check this code
  if(x% ==0){
    res<- "even"
  }
  else{
    res<-odd
  }
  return(res)
}
 
fn4(5)